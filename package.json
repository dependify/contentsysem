{
  "name": "contentsys",
  "version": "1.0.0",
  "description": "Multi-tenant AI content engine with agentic workflow",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:client && tsc && npm run copy:directives",
    "build:client": "cd client && npm run build",
    "copy:directives": "node -e \"const fs=require('fs'); const path=require('path'); if(!fs.existsSync('dist/directives')) fs.mkdirSync('dist/directives', {recursive: true}); fs.readdirSync('src/directives').forEach(f => fs.copyFileSync(path.join('src/directives', f), path.join('dist/directives', f)));\"",
    "start": "node dist/index.js",
    "dev": "ts-node --transpile-only src/index.ts",
    "worker": "ts-node --transpile-only src/worker.ts",
    "setup": "node setup.js",
    "db:init": "node scripts/init-database.js",
    "test:system": "node test-system.js"
  },
  "dependencies": {
    "@mastra/core": "^0.1.0",
    "@mendable/firecrawl-js": "^0.0.19",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^4.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "exa-js": "^1.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.2.1",
    "form-data": "^4.0.5",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.0",
    "nodemailer": "^7.0.11",
    "openai": "^4.20.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.27",
    "@types/node-cron": "^3.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}